---
import HeaderButton from './HeaderButton.astro';
import Counter from './Counter.jsx';
// console.log('javasscript');
---

<!-- directiva transition: persist para que se muestre el estado todo el tiempo y no lo pierda al cambiar de pagina -->
<header transition:persist class='py-8 [x-4 mx-auto max-w-xl lg:py-16 lg:px-'>
  <div class='mx-auto text-center mb-8 lg:mb-16'>
    <h2 class='mb-4 text-5xl tracking-tight font-extrabold text-white'>
      SpaceX launches ðŸš€
    </h2>
    <p class='font-light text-gray-500 sm:text-xl dark:text-gray-400'>
      All the information about SpaceX launches
    </p>
  </div>

  <!-- directiva cliente: para que astro sepa que debe cargar js -->
  <Counter client:visible/>

  <nav
    class='flex flex-col items-center justify-between w-full text-center md:flex-row'
  >
    <HeaderButton class='text-white' href='/'>
      <svg
        slot='before'
        width='24'
        height='24'
        viewBox='0 0 24 24'
        stroke-width='2'
        stroke='currentColor'
        fill='none'
        stroke-linecap='round'
        stroke-linejoin='round'
      >
        <path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
        <path
          d='M4 13a8 8 0 0 1 7 7a6 6 0 0 0 3 -5a9 9 0 0 0 6 -8a3 3 0 0 0 -3 -3a9 9 0 0 0 -8 6a6 6 0 0 0 -5 3'
        ></path>
        <path d='M7 14a6 6 0 0 0 -3 6a6 6 0 0 0 6 -3'></path>
        <path d='M15 9m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0'></path>
      </svg>
       Ultimos lanzamientos
    </HeaderButton>
    <HeaderButton class='text-white' href='/oldest'>
      <svg
        slot='before'
        width='24'
        height='24'
        viewBox='0 0 24 24'
        stroke-width='2'
        stroke='currentColor'
        fill='none'
        stroke-linecap='round'
        stroke-linejoin='round'
      >
        <path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
        <path d='M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0'></path>
